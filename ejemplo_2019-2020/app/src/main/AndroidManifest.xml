<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    package="es.tta.example" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        tools:replace="android:icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="es.tta.example.MainActivity"
            android:label="@string/main_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.tta.example.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="es.tta.example.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="es.tta.example.ExerciseActivity"
            android:label="@string/title_activity_exercise" >
        </activity>
    </application>

</manifest>
